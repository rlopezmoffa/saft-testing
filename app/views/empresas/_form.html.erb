<%= form_for(@empresa, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @empresa.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@empresa.errors.count, "error") %> prohibited this empresa from being saved:</h4>

      <ul>
      <% @empresa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :razon_social, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :razon_social, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :direccion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :direccion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefonos, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telefonos, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contacto, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :contacto, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_ingreso, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fecha_ingreso, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bps_numero, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :bps_numero, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bps_digito, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :bps_digito, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pat_socio, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pat_socio, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rubros, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rubros, :class => "form-control" %>
    </div>
  </div> 

  <div class="form-group">
    <%= f.label :Estado, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:estados_id, options_for_select([['Activa', 1], ['Inactiva', 2]], :selected =>  @estado)) %>
    </div>
  </div> 

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Confirmar", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
