<div class="page-header">
  <%= link_to new_tarifa_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Tarifa
  <% end %>
  <h3>Tarifas</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Bandera diurna</th>
        <th>Bandera nocturna</th>
        <th>Ficha diurna</th>
        <th>Ficha nocturna</th>       
        <th></th>       
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tarifas) do |tarifa| %>
        <td><%= tarifa.fecha.strftime("%d/%m/%Y") %></td>
        
        <td><div align="right"><%= number_with_precision(tarifa.valor_ba_diu, 
          :precision => 2, :delimiter => ".", :separator => ",") %></td>  
        
        <td><div align="right"><%= number_with_precision(tarifa.valor_ba_noc, 
          :precision => 2, :delimiter => ".", :separator => ",") %></td>  
        
        <td><div align="right"><%= number_with_precision(tarifa.valor_fi_diu, 
          :precision => 2, :delimiter => ".", :separator => ",") %></td>  
     
        <td><div align="right"><%= number_with_precision(tarifa.valor_fi_noc, 
          :precision => 2, :delimiter => ".", :separator => ",") %></td>        
        <td><%= link_to 'Editar', edit_tarifa_path(tarifa) %></td>       
      <% end %>
    </tbody>
  </table>
</div>
